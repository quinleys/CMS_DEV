{% extends 'base.html.twig' %}
{% block body %}
<h1> Hello, {{ app.user.username }} </h1>
<div class="row">
{% for period in periods %}
<div class="col-md-6 my-2 " >
    <div class="card h-100">
    <div class="card-body">
    <h5 class="card-title"> {{ period.title }}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{ period.startDate|date('Y-m-d') }}  -  {{ period.endDate|date('Y-m-d') }} </h6>
    <p class="card-text"> Gemaakte opdrachten: {{ period.getPosts().count()}} </p>
    {% if period.isConfirmed  == false %}
    <a href="/client/periods/{{period.id}}" class="btn btn-primary mr-2 my-2">Nakijken en goedkeuren</a>
    {% else %}
     <a href="/client/periods/{{period.id}}" class="btn btn-primary  mr-2 my-2">Nakijken</a>
    {% endif %}
    <a href="/client/periods/{{period.id}}/complaint" class="btn btn-primary  mr-2 my-2">Fout melden</a>
  </div>
    </div>
</div>
  {% endfor %}
  </div>
{% endblock %}